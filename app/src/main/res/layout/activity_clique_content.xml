<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hoyinpersonal.npcompletelibrary.CliqueContent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clique_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clique_title"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/clique_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/what_is_the_problem"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/clique_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clique_problem"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/clique_image_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="example of a clique"
                app:srcCompat="@drawable/clique_image_example" />

            <TextView
                android:id="@+id/clique_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clique_problem_cont1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/clique_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/more_formally"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/clique_formal_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="a formal summary of clique"
                app:srcCompat="@drawable/clique_formal_summary" />

            <TextView
                android:id="@+id/clique_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/why_is_it_np_complete"
                android:textColor="@android:color/holo_purple"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/clique_text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/clique_problem_npcomplete_reason"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/clique_text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/related_problems"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" />

            <Button
                android:id="@+id/three-satisfiability_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/three_satisfiability_name" />

            <Button
                android:id="@+id/independent-set_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/independent_set_name" />

            <Button
                android:id="@+id/subgraph_isomorphism_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/subgraph_isomorphism_name" />

            <TextView
                android:id="@+id/clique_text9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credits_links"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/clique_text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/garey_johnson_citation"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
