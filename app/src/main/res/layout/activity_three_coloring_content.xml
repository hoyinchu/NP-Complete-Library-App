<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hoyinpersonal.npcompletelibrary.ThreeColoringContent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/three_coloring_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/three_coloring_title"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/three_coloring_what_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/what_is_the_problem"
                android:textColor="@color/colorWhatIsProblem"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/three_coloring_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/three_coloring_problem"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/three_coloring_example_graph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/three_coloring_example_graph" />

            <TextView
                android:id="@+id/three_coloring_more_formal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/more_formally"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/three_coloring_formal_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/three_coloring_formal_summary" />

            <TextView
                android:id="@+id/three_coloring_why_np_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/why_is_it_np_complete"
                android:textColor="@color/colorWhyNPComplete"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/three_coloring_in_np"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/three_coloring_in_np_reason"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/three_coloring_reduction_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/three_coloring_reduction_intro"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/three_coloring_reduction_link1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/three_coloring_reduction_link1"
                android:autoLink="web"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/three_coloring_related_problems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/related_problems"
                android:textColor="@color/colorRelatedProblem"
                android:textSize="24sp" />

            <Button
                android:id="@+id/three-satisfiability_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/three_satisfiability_name" />

            <TextView
                android:id="@+id/three_coloring_credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credits_links"
                android:textColor="@color/colorCredits"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/three_coloring_credit_link1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/garey_johnson_citation" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
