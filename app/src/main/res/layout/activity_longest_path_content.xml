<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hoyinpersonal.npcompletelibrary.LongestPathContent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/longest_path_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/longest_path_title"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/longest_path_what_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/what_is_the_problem"
                android:textColor="@color/colorWhatIsProblem"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/longest_path_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/longest_path_problem"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/longest_path_weighted_version_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/longest_path_weighted_version_problem"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/longest_path_formal_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/longest_path_weighted_version_formal_summary" />

            <TextView
                android:id="@+id/longest_path_why_np_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/why_is_it_np_complete"
                android:textColor="@color/colorWhyNPComplete"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/longest_path_in_np"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/longest_path_in_np"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/longest_path_reduction_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/longest_path_reduction_intro"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/longest_path_reduction_link1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/longest_path_reduction_link1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/longest_path_related_problems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/related_problems"
                android:textColor="@color/colorRelatedProblem"
                android:textSize="24sp" />

            <Button
                android:id="@+id/hamiltonian_path_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/hamiltonian_path_name" />

            <TextView
                android:id="@+id/longest_path_credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credits_links"
                android:textColor="@color/colorCredits"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/longest_path_credits_link1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/garey_johnson_citation" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
