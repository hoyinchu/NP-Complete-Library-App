<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hoyinpersonal.npcompletelibrary.IndependentSetContent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/independent_set_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/independent_set_title"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/independent_set_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/what_is_the_problem"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/independent_set_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/independent_set_problem"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/independent_set_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/more_formally"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/independent_set_formal_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/independent_set_formal_summary" />

            <TextView
                android:id="@+id/independent_set_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/why_is_it_np_complete"
                android:textColor="@android:color/holo_purple"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/independent_set_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/independent_set_in_np_reason"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/independent_set_reduction1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/independent_set_reduction1" />

            <ImageView
                android:id="@+id/independent_set_reduction2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/independent_set_reduction2" />

            <TextView
                android:id="@+id/independent_set_text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/proof_of_correctness"
                android:textColor="@android:color/holo_purple"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/independent_set_text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/independent_set_correctness_link1" />

            <TextView
                android:id="@+id/independent_set_text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/related_problems"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" />

            <Button
                android:id="@+id/three-satisfiability_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/three_satisfiability_name" />

            <Button
                android:id="@+id/vertex_cover_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/vertex_cover_name" />

            <Button
                android:id="@+id/set_packing_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/set_packing_name" />

            <TextView
                android:id="@+id/independent_set_text9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credits_links"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/independent_set_text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/garey_johnson_citation" />

            <TextView
                android:id="@+id/independent_set_text11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/independent_set_correctness_link1" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
