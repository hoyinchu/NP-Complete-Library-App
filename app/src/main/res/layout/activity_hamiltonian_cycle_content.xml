<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hoyinpersonal.npcompletelibrary.HamiltonianCycleContent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/hamiltonian_cycle_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hamiltonian_cycle_title"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/hamiltonian_cycle_what_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/what_is_the_problem"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/hamiltonian_cycle_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hamiltonian_cycle_problem"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/hamiltonian_cycle_example_graph"
                android:layout_width="wrap_content"
                android:layout_height="@android:dimen/thumbnail_height"
                app:srcCompat="@drawable/hamiltonian_cycle_example_graph" />

            <TextView
                android:id="@+id/hamiltonian_cycle_more_formal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/more_formally"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/hamiltonian_cycle_formal_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hamiltonian_cycle_formal_summary" />

            <TextView
                android:id="@+id/hamiltonian_cycle_why_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/why_is_it_np_complete"
                android:textColor="@android:color/holo_purple"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/hamiltonian_cycle_in_np_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hamiltonian_cycle_in_np_reason"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/hamiltonian_cycle_reduction1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hamiltonian_cycle_reduction1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/hamiltonian_cycle_reduction_link1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/hamiltonian_cycle_reduction_link1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/hamiltonian_cycle_reduction2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hamiltonian_cycle_reduction2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/hamiltonian_cycle_reduction_link2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/hamiltonian_cycle_reduction_link2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/hamiltonian_cycle_related_problems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/related_problems"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" />

            <Button
                android:id="@+id/three-satisfiability_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/three_satisfiability_name" />

            <Button
                android:id="@+id/vertex_cover_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/vertex_cover_name" />

            <Button
                android:id="@+id/hamiltonian_path_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/hamiltonian_path_name" />

            <Button
                android:id="@+id/traveling-salesman_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/traveling_salesman_name" />

            <TextView
                android:id="@+id/hamiltonian_cycle_credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credits_links"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/hamiltonian_cycle_credit_link1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/garey_johnson_citation" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
