<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hoyinpersonal.npcompletelibrary.SatisfiabilityContent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/satisfiability_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/satisfiability_title"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/satisfiability_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/what_is_the_problem"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/satisfiability_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/satisfiability_problem"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/satisfiability_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/more_formally"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/satisfiability_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/satisfiability_more_formal"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/satisfiability_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/why_is_it_np_complete"
                android:textColor="@android:color/holo_purple"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/satisfiability_cook_levin_theorem_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="A summary of the Cook-Levin Theorem"
                app:srcCompat="@drawable/satisfiability_cook_levin_theorem_summary" />

            <TextView
                android:id="@+id/satisfiability_text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/satisfiability_npcomplete_reason"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/satisfiability_text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/related_problems"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" />

            <Button
                android:id="@+id/three-satisfiability_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/three_satisfiability_name" />

            <TextView
                android:id="@+id/satisfiability_text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credits_links"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/satisfiability_text9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/satisfiability_credit1" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
