<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hoyinpersonal.npcompletelibrary.ThreeSatisfiabilityContent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/three_satisfiability_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/three_satisfiability_title"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/three_satisfiability_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/what_is_the_problem"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/three_satisfiability_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/three_satisfiability_problem"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/ThreeCNF_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="3-conjunctive normal form example"
                app:srcCompat="@drawable/three_satisfiability_conjunctive_normal_form" />

            <TextView
                android:id="@+id/three_satisfiability_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/three_satisfiability_problem_cont1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/three_satisfiability_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/more_formally"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/three_satisfiability_formal_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="a formal description of the 3SAT @string/satisfiability_problem"
                app:srcCompat="@drawable/three_satisfiability_formal_summary" />

            <TextView
                android:id="@+id/three_satisfiability_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/why_is_it_np_complete"
                android:textColor="@android:color/holo_purple"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/three_satisfiability_text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/three_satisfiability_npcomplete_reason"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/three_satisfiability_text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/related_problems"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" />

            <Button
                android:id="@+id/satisfiability_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/satisfiability_name" />

            <Button
                android:id="@+id/clique_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/clique_name" />

            <Button
                android:id="@+id/hamiltonian-cycle_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/hamiltonian_cycle_name" />

            <Button
                android:id="@+id/vertex_cover_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/vertex_cover_name" />

            <Button
                android:id="@+id/three_dimensional_matching_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/three_dimensional_matching_name" />

            <Button
                android:id="@+id/subset_sum_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/subset_sum_name" />

            <Button
                android:id="@+id/three_coloring_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/three_coloring_name" />

            <TextView
                android:id="@+id/three_satisfiability_text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credits_links"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/three_satisfiability_text9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/garey_johnson_citation" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
